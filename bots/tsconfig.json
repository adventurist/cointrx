{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": [
    "es2017",
    "dom"
    ],
    "paths": {
      "@scoped/core-libs/*": [
        "node_modules/@types/*",
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "moduleResolution": "node",
  "lib": [ "es2015", "es2017", "dom" ]
}
